<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android_calculator.CalcMainActivity" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"/>
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TableRow android:layout_gravity="center_horizontal">
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="MC"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="MS"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="MR"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="M+"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="M-"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow android:layout_gravity="center_horizontal">
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="←"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="CE"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="C"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="±"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="√"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow android:layout_gravity="center_horizontal">
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="7"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="8"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="9"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="/"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="%"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow android:layout_gravity="center_horizontal">
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="4"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="5"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="6"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="*"
                android:textSize="20sp"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="1/x"
                android:textSize="20sp"/>
        </TableRow>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="20sp"
                android:id="@+id/btn1"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="2"
                android:layout_toRightOf="@id/btn1"
                android:layout_alignTop="@id/btn1"
                android:textSize="20sp"
                android:id="@+id/btn2"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="3"
                android:layout_toRightOf="@id/btn2"
                android:layout_alignTop="@id/btn2"
                android:textSize="20sp"
                android:id="@+id/btn3"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="-"
                android:layout_toRightOf="@id/btn3"
                android:layout_alignTop="@id/btn3"
                android:textSize="20sp"
                android:id="@+id/btnSub"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:text="="
                android:layout_toRightOf="@id/btnSub"
                android:layout_alignTop="@id/btnSub"
                android:textSize="20sp"
                android:id="@+id/btnEquel"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="+"
                android:layout_toLeftOf="@id/btnEquel"
                android:layout_alignBottom="@id/btnEquel"
                android:textSize="20sp"
                android:id="@+id/btnAdd"/>
            <Button 
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="."
                android:layout_toLeftOf="@id/btnAdd"
                android:layout_alignBottom="@id/btnAdd"
                android:textSize="20sp"
                android:id="@+id/btnDot"/>
            <Button 
                android:layout_width="130sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="0"
                android:layout_toLeftOf="@id/btnDot"
                android:layout_alignBottom="@id/btnDot"
                android:textSize="20sp"/>"
        </RelativeLayout>
    </TableLayout>

</LinearLayout>
